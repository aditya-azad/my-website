<div class="card-list">
  {% for post in postslist | reverse %}
    <div class="card">
      <div class="card-item">
        <a href="{{ post.url | url }}">
          <h2 class="card-title">
            {% if post.data.title %}
              {{ post.data.title }}
            {% else %}
            <code>
              {{ post.url }}
            </code>
            {% endif %}
          </h2>
          <time class="card-subtext" datetime="{{ post.date | htmlDateString }}">
            {{ post.date | readableDate }}
          </time>
        </a>
        {% if displayTags %}
        <div class="card-tags">
          {% for tag in post.data.tags %}
            {%- if collections.tagList.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" class="card-tag">{{ tag }}</a>
            {%- endif -%}
          {% endfor %}
        </div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>
